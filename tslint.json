{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
    "jsx-wrap-multiline": false,
    "jsx-no-lambda": false,
    "noUnusedLocals": false,
    "object-literal-sort-keys": [
      false,
      "ignore-case",
      "match-declaration-order",
      "shorthand-first"
    ]
  }
}
